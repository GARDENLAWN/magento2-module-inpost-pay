<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="inpost_pay_promotions" translate="label" type="text" sortOrder="40"
           showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Available In-app Promotions</label>
        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
        <field id="enabled" translate="label" type="select" sortOrder="10"
               showInDefault="1" showInWebsite="1" canRestore="1">
            <label>Enable In-app Promotions</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/inpost_pay/promotions_enabled</config_path>
        </field>
        <field id="promotions_mapping" translate="label" sortOrder="10"
               showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Available In-app Promotions</label>
            <frontend_model>InPost\InPostPay\Block\Adminhtml\Form\Field\PromotionsField</frontend_model>
            <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
            <config_path>payment/inpost_pay/promotions_mapping</config_path>
        </field>
    </group>
</include>
