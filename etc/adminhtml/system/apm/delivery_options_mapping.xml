<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="inpost_pay_shipment_apm" translate="label" type="text" sortOrder="30"
           showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Shipment Mapping Settings for Pickup Delivery</label>
        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
        <field id="inpost_apm_standard_mapping" translate="label" type="select" sortOrder="10"
               showInDefault="1" showInWebsite="1" canRestore="1">
            <label>Standard Pickup Point Delivery</label>
            <source_model>Magento\Shipping\Model\Config\Source\Allmethods</source_model>
            <config_path>payment/inpost_pay/inpost_apm_standard_mapping</config_path>
            <backend_model>InPost\InPostPay\Model\Config\Backend\UniqueShippingMethodValidator</backend_model>
        </field>
        <field id="other_inpost_apm_standard_mapping" translate="label" type="text" sortOrder="11"
               showInDefault="1" showInWebsite="1" canRestore="1">
            <label>Other Standard Pickup Point Delivery</label>
            <config_path>payment/inpost_pay/other_inpost_apm_standard_mapping</config_path>
            <comment><![CDATA[If a custom or third-party delivery method You use in Checkout is not present on the list above, enter full method code here.</br>For example, in case of Owebia it could be: owsh1_added_method_code. Leave empty if You selected Your method from a dropdown list.</br>]]></comment>
        </field>
        <field id="inpost_apm_pww_mapping" translate="label" type="select" sortOrder="15"
               showInDefault="1" showInWebsite="1" canRestore="1">
            <label>Pickup Point Weekend Delivery</label>
