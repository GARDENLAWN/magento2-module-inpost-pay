<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block name="inpost.init.widget.cart"
                   template="InPost_InPostPay::initialize-widget-cart.phtml"
                   after="checkout.cart.methods.onepage.bottom"
                   ifconfig="payment/inpost_pay/show_on_cart">
                <arguments>
                    <argument name="binding_place" xsi:type="const">
                        InPost\InPostPay\Provider\Config\DisplayConfigProvider::BASKET_SUMMARY_BINDING_PLACE_NAME
                    </argument>
                    <argument name="widget_view_model" xsi:type="object">InPost\InPostPay\ViewModel\Widget</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
