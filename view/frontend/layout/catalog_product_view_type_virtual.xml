<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
<!--        <container name="product.info.virtual.extra" after="product.info.virtual" as="product_type_data_extra" label="Product Extra Info"/>-->
        <referenceBlock name="product.info.virtual">
            <block name="inpost.init.widget.product"
                   template="InPost_InPostPay::initialize-widget-product.phtml"
                   after="-" ifconfig="payment/inpost_pay/show_on_product_cart">
                <arguments>
                    <argument name="binding_place" xsi:type="const">
                        InPost\InPostPay\Provider\Config\DisplayConfigProvider::PRODUCT_CARD_BINDING_PLACE_NAME
                    </argument>
                    <argument name="widget_view_model" xsi:type="object">InPost\InPostPay\ViewModel\Widget</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

