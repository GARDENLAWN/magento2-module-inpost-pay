<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">inpostpay_bestsellers_listing.inpostpay_bestsellers_listing_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>inpostpay_bestsellers_columns</spinner>
		<deps>
			<dep>inpostpay_bestsellers_listing.inpostpay_bestsellers_listing_listing_data_source</dep>
		</deps>
        <buttons>
            <button name="upload">
                <url path="*/*/upload"/>
                <class>primary</class>
                <label translate="true">Synchronise With InPost Pay</label>
            </button>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Bestseller Product</label>
            </button>
        </buttons>
	</settings>
	<dataSource name="inpostpay_bestsellers_listing_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">bestseller_product_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<dataProvider name="inpostpay_bestsellers_listing_listing_data_source"
                      class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>bestseller_product_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="inpostpay_bestsellers_columns">
		<settings>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">inpostpay_bestsellers_listing.inpostpay_bestsellers_listing.inpostpay_bestsellers_columns</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
        <column name="sku">
            <settings>
                <filter>text</filter>
                <label translate="true">SKU</label>
            </settings>
        </column>
        <column name="product_name" class="InPost\InPostPay\Ui\Component\Listing\Column\ProductName">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Product Name</item>
                    <item name="fieldAction" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Product Name</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="inpost_pay_status" class="InPost\InPostPay\Ui\Component\Listing\Column\InPostPayBestsellerProductStatus">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">InPost Pay Status</item>
                    <item name="fieldAction" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">InPost Pay Status</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="website_id" class="InPost\InPostPay\Ui\Component\Listing\Column\WebsiteOptions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Website</item>
                </item>
                <item name="options" xsi:type="object">InPost\InPostPay\Model\Source\Store\Website</item>
            </argument>
            <settings>
                <filter>text</filter>
                <label translate="true">Website</label>
            </settings>
        </column>
        <column name="available_start_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <timezone>false</timezone>
                <dateFormat>y-MM-dd</dateFormat>
                <skipTimeZoneConversion>true</skipTimeZoneConversion>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Available Start Date</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="available_end_date" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <timezone>false</timezone>
                <dateFormat>y-MM-dd</dateFormat>
                <skipTimeZoneConversion>true</skipTimeZoneConversion>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Available End Date</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="synchronized_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Synchronized At</label>
            </settings>
        </column>
        <column name="error">
            <settings>
                <filter>text</filter>
                <label translate="true">Synchronization Error</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="InPost\InPostPay\Ui\Component\Listing\Column\BestsellerProductActions">
            <settings>
                <indexField>bestseller_product_id</indexField>
            </settings>
        </actionsColumn>
	</columns>
</listing>
