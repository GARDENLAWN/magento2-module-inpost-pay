<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">inpostpay_bestsellers_form.inpostpay_bestsellers_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="InPost\InPostPay\Block\Adminhtml\Bestsellers\Edit\BackButton"/>
			<button name="delete" class="InPost\InPostPay\Block\Adminhtml\Bestsellers\Edit\DeleteButton"/>
			<button name="save" class="InPost\InPostPay\Block\Adminhtml\Bestsellers\Edit\SaveButton"/>
		</buttons>
		<namespace>inpostpay_bestsellers_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>inpostpay_bestsellers_form.inpostpay_bestsellers_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="inpostpay_bestsellers_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="inpostpay_bestsellers_form_data_source"
                      class="InPost\InPostPay\Ui\Component\Form\DataSource\BestsellerProductDataProvider">
			<settings>
				<requestFieldName>bestseller_product_id</requestFieldName>
				<primaryFieldName>bestseller_product_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General Configuration</label>
		</settings>
        <field name="sku" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">SKU</label>
                <dataScope>sku</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="website_id" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">InPost\InPostPay\Model\Source\Store\Website</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Website</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">block</item>
                    <item name="dataScope" xsi:type="string">website_id</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="available_start_date" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="options" xsi:type="array">
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                        <item name="timePicker" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Available Start Date</label>
                <visible>true</visible>
                <dataScope>available_start_date</dataScope>
            </settings>
        </field>
        <field name="available_end_date" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="options" xsi:type="array">
                        <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                        <item name="showsTime" xsi:type="boolean">true</item>
                        <item name="timePicker" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Available End Date</label>
                <visible>true</visible>
                <dataScope>available_end_date</dataScope>
            </settings>
        </field>
        <field name="synchronized_at" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Synchronized At</label>
                <visible>true</visible>
                <dataScope>synchronized_at</dataScope>
            </settings>
        </field>
        <field name="deep_link" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Deep Link</label>
                <visible>true</visible>
                <dataScope>deep_link</dataScope>
            </settings>
        </field>
        <field name="qr_code" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">QR Code</label>
                <visible>true</visible>
                <dataScope>qr_code</dataScope>
            </settings>
        </field>
        <field name="error" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">BestsellerProduct</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Synchronization Error</label>
                <visible>true</visible>
                <dataScope>error</dataScope>
            </settings>
        </field>
	</fieldset>
</form>
